                            </div>
                        <script type="text/javascript">
                            new QRCode(document.getElementById("qrcode"), "<%= user.persona %>:<%= user._id %>");
                        </script>
                        </div>
                        <div class="row text-center mt-4">
                            <div class="col p-2">
                                <span class="btn btn-primary link_button" onclick="toggleDiv('qrcode')">Toggle QR</span>
                            </div>
                            <div class="col p-2">
                                
                            </div>
                            <div class="col p-2">
                                <a href="/scan" class="btn btn-primary link_button" role="button">Scan a passport</a>
